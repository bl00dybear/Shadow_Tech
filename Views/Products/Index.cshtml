@model IEnumerable<Shadow_Tech.Models.Product>

@{
    ViewData["Title"] = "Product List";
}

<h1>Product List</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Photo</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Title</td>
                <td>@product.Description</td>
                <td>@product.Price.ToString("C")</td>
                <td>@product.Stock</td>
                <td>
                    @if (!string.IsNullOrEmpty(product.Photo))
                    {
                        <img src="@product.Photo" alt="Product Image" style="max-width:100px; max-height:100px;" />
                    }
                    else
                    {
                        <span>No Image</span>
                    }
                </td>
                <td>@product.Category?.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>