@model IEnumerable<Shadow_Tech.Models.Product>

@{
    ViewData["Title"] = "Product List";
}

<h1>Product List</h1>

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card" style="width: 18rem; border: 1px solid #ddd; padding: 10px; text-align: center;">
                <!-- Afișează poza produsului -->
                @if (!string.IsNullOrEmpty(product.Photo))
                {
                    <img src="@product.Photo" class="card-img-top" alt="Product Image" style="max-height: 150px; object-fit: contain; margin-bottom: 10px;" />
                }
                else
                {
                    <img src="/images/default.jpg" class="card-img-top" alt="Default Image" style="max-height: 150px; object-fit: contain; margin-bottom: 10px;" />
                }

                <!-- Titlul produsului -->
                <div class="card-body">
                    <h5 class="card-title">@product.Title</h5>

                    <!-- Prețul produsului -->
                    <p class="card-text" style="font-size: 1.2em; color: #333;">
                        @product.Price.ToString() Lei
                    </p>
                </div>
            </div>
        </div>
        @if ((Model.ToList().IndexOf(product) + 1) % 3 == 0)
        {
            <div class="clearfix d-none d-md-block"></div>
        }
    }
</div>
