@model Shadow_Tech.Models.Category


@{
    ViewBag.Title = "Adaugare Categorie";
}


<h2>Adaugare Categorie</h2>

<form asp-action="New" asp-controller="Categories" method="post">

    <div class="form-group">
        <label asp-for="Name" class="form-label">Denumire categorie</label>
        <br />
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Description" class="form-label">Descrie categoria in cateva cuvinte</label>
        <br />
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Image" class="form-label">Denumire categorie</label>
        <br />
        <input asp-for="Image" class="form-control" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>

    <br /><br />
    <button class="btn btn-success" type="submit">Adauga categorie</button>
</form>
