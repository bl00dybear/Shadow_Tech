@{
    ViewBag.Title = "Lista categorii";
}

<h2>@ViewBag.Title</h2>
<br />

@if (TempData.ContainsKey("message"))
{
    <h1>@ViewBag.message</h1>
}

<br />

@foreach (var category in ViewBag.Categories)
{
    <div class="col-lg-3 sm-margin-30px-bottom">
        <div class="h-100">
            <a href="#" class="card bg-img box-hover cover-background border-0 p-4 h-100">
                <div class="mt-auto position-relative z-index-9">
                    <label class="form-label">@category.Name</label>
                    <div class="position-relative z-index-9 text-white opacity6">
                        @category.ProductCount produse
                    </div>
                </div>
            </a>
        </div>
    </div>
    <br />
    <a class="btn alert-success" asp-controller="Products" asp-action="Index" asp-route-id="@category.Id+1">Afisare categorie</a>
    <a class="btn alert-success" asp-controller="Categories" asp-action="Edit" asp-route-id="@category.Id">Editare categorie</a>
    <br />
    <br />
}
<br />
<a class="btn btn-success" asp-controller="Categories" asp-action="New">Adauga o noua categorie</a>
<br />
