@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <a class="nav-link text-mypurple" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@User.Identity?.Name</a>
    

}
else
{
    <a class="nav-link text-mypurple" asp-area="Identity" asp-page="/Account/Login">Login</a>
}
